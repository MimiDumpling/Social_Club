<h1>Penguin Club</h1>

<%= form_with scope: :user, url: users_path, local: true do |form| %>

  <% if @error.present?%>
  <div id="error_explanation">
    <%= @error %>
  </div>
  <% end %>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>
